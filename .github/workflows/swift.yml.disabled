name: Swift CI

on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]

jobs:
  build:
    runs-on: macos-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Select Xcode version
        run: sudo xcode-select -s /Applications/Xcode_16.0.app/Contents/Developer

      - name: Build the app
        run: xcodebuild -scheme XboxHIDTranslator -sdk macosx -configuration Debug build

      - name: Run tests
        run: xcodebuild test -scheme XboxHIDTranslator -sdk macosx -configuration Debug -destination 'platform=macOS'
